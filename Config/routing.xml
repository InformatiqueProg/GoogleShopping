<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <!--

    if a /admin/module/googleshopping/ route is provided, a "Configuration" button will be displayed
    for the module in the module list. Clicking this button will invoke this route.

    <route id="my_route_id" path="/admin/module/googleshopping">
        <default key="_controller">GoogleShopping\Full\Class\Name\Of\YourConfigurationController::methodName</default>
    </route>

    <route id="my_route_id" path="/admin/module/googleshopping/route-name">
        <default key="_controller">GoogleShopping\Full\Class\Name\Of\YourAdminController::methodName</default>
    </route>

    <route id="my_route_id" path="/my/route/name">
        <default key="_controller">GoogleShopping\Full\Class\Name\Of\YourOtherController::methodName</default>
    </route>

    ...add as many routes as required.

    <route>
    ...
    </route>
    -->
    <route id="googleshopping.configuration" path="/admin/module/googleshopping/api/configuration" methods="POST">
        <default key="_controller">GoogleShopping\Controller\Admin\ConfigurationController::saveApiConfiguration</default>
    </route>

    <route id="googleshopping.configuration" path="/admin/module/googleshopping/merchant/configuration" methods="POST">
        <default key="_controller">GoogleShopping\Controller\Admin\ConfigurationController::saveMerchantConfiguration</default>
    </route>

    <route id="googleshopping.callback" path="/googleshopping/oauth2callback" methods="GET">
        <default key="_controller">GoogleShopping\Controller\Admin\BaseGoogleShoppingController::setAuthorization</default>
    </route>

    <route id="googleshopping.taxonomy.get" path="/admin/module/googleshopping/taxonomy" methods="GET">
        <default key="_controller">GoogleShopping\Controller\Admin\CategoryController::getTaxonomy</default>
    </route>

    <route id="googleshopping.taxonomy.associate" path="/admin/modules/googleshopping/taxonomy/associate" methods="POST">
        <default key="_controller">GoogleShopping\Controller\Admin\CategoryController::associateTaxonomy</default>
    </route>

    <route id="googleshopping.add.product" path="/admin/module/googleshopping/add/{id}" methods="GET">
        <default key="_controller">GoogleShopping\Controller\Admin\ProductController::addProduct</default>
        <requirement key="id">\d+</requirement>
    </route>

    <route id="googleshopping.add.products" path="/admin/module/googleshopping/add/products" methods="GET">
        <default key="_controller">GoogleShopping\Controller\Admin\ProductController::addProducts</default>
    </route>

    <route id="googleshopping.delete.product" path="/admin/module/googleshopping/delete/{id}" methods="GET">
        <default key="_controller">GoogleShopping\Controller\Admin\ProductController::deleteProduct</default>
        <requirement key="id">\d+</requirement>
    </route>

</routes>
